generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   Int    @id @default(autoincrement())
  name String
}

model CarType {
  id       Int    @id @default(autoincrement())
  name     String
  imageUrl String
  cars     Car[] // Not a database column, just lets you query carType.cars
}

model Car {
  id           Int     @id @default(autoincrement())
  carTypeId    Int // Foreign key (just a number)
  carType      CarType @relation(fields: [carTypeId], references: [id]) // ‚Üê The relation: "Use carTypeId to point to CarType's id"
  name         String
  ownerId      Int
  state        String
  fuelType     String
  horsepower   Int
  licensePlate String  @unique
  info         String?
}
